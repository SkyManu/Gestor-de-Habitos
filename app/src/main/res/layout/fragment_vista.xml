<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_dark_primary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Margen entre el TextView y el Spinner -->

    <!-- Menú desplegable (Spinner) para cambiar entre Día, Semana, Mes -->
        <TextView
            android:id="@+id/text_vista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="8dp"
            android:text="Vista"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner_vista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:entries="@array/vista_opciones" />
</LinearLayout>

    <!-- Contenedor para la vista de día -->
    <LinearLayout
        android:id="@+id/contenedor_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareas del Día"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />

        <!-- RecyclerView para mostrar las tareas diarias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_tareas_dia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Contenedor para la vista de semana -->
    <LinearLayout
        android:id="@+id/contenedor_semana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- Flechas para cambiar de semana -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_semana_anterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:layout_marginEnd="16dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txt_semana_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semana Actual"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_semana_siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:layout_marginStart="16dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Selector de días de la semana con botones -->
        <LinearLayout
            android:id="@+id/linear_dias_semana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Contenedor de las etiquetas de días (L, M, X, J, V, S, D) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Etiquetas para los días de la semana -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="L"
                    android:textColor="@color/color_button_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="@color/color_button_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/color_button_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="J"
                    android:textColor="@color/color_button_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="V"
                    android:textColor="@color/color_button_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/color_button_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/color_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Botones para seleccionar los días de la semana -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Días de la semana como botones -->
                <Button
                    android:id="@+id/dia_lunes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Lun 01"
                    android:background="@color/color_button_default"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/dia_martes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mar 02"
                    android:background="@color/color_button_default"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/dia_miercoles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mié 03"
                    android:background="@color/color_button_default"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/dia_jueves"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Jue 04"
                    android:background="@color/color_button_default"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/dia_viernes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Vie 05"
                    android:background="@color/color_button_default"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/dia_sabado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sáb 06"
                    android:background="@color/color_button_default"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/dia_domingo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dom 07"
                    android:background="@color/color_button_default"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <!-- RecyclerView para mostrar las tareas del día seleccionado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareas del Día"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_calendario_semana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Contenedor para la vista de mes -->
    <LinearLayout
        android:id="@+id/contenedor_mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareas del Mes"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />

        <!-- Se puede agregar un calendario mensual aquí más adelante -->
    </LinearLayout>

</LinearLayout>
