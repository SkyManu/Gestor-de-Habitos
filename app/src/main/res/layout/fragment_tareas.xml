<!-- fragment_tareas.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- RecyclerView para la lista de tareas -->
    <TextView
        android:id="@+id/text_tareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tareas"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_tareas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- BotÃ³n flotante para crear nuevas tareas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_crear_tarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_button_background"
        android:backgroundTint="@color/color_button_background"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"/>
</LinearLayout>
